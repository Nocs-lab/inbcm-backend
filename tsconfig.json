{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "eslintrc.config.mjs", ".prettierrc.cjs"],
  "exclude": ["node_modules/", "dist/"]
}
