{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": ["node", "express", "./src/types/express.d.ts"],
  },
  "include": ["src/**/*.ts", "eslintrc.config.mjs", ".prettierrc.cjs", "tests/**/*.ts"],
  "exclude": ["node_modules/", "dist/"]
}



